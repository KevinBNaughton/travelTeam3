<% provide(:title, "Sign Up") %>
<!DOCTYPE html>
<html>
<head>
  <script type="text/javascript" src ="/assests/AP.js"></script>
  <link rel="stylesheet" type="text/css" href="/assests/AP.css" />
  <title><%= yield(:title) %> | Bochitto Travel</title>

</head>

<style >
  
  .sr-only{

    border: 2px solid red;
    height: none;
  }
</style>

<body background="http://sf.co.ua/2012/wallpaper-2029743.jpg">

  
  <%= render 'layouts/header' %>

  <div  class="container col-md-6 col-md-offset-3" style="
    background: #fffff0cf;
    position: sticky;
    margin-top: 5%;
    width: 40%;
    margin-bottom: 10%;
    height: max-content;
    left: 30%;
    border-radius: 15px;">

  <%= form_for(@user, url: signup_path) do |f| %>
  <h2 style=" text-align: center;">Please Sign Up</h2>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </p>
  <p>
    <%= f.label :email%>
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </p>
  <p>
    <%= f.label :password, class: "sr-only", style:"position:unset; overflow: visible;" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </p>
  <!--  <div class="checkbox">
  <label>
  <input type="checkbox" value="remember-me"> Remember me
  </label>
  </div> -->
    <%= f.submit "Click to Sign Up", class: "btn btn-primary", style: 
    "float: right;
    margin-top: -5px;
    margin-bottom: 10px;" %>
  <% end %>
  <p>Already Registered? <%= link_to "Log in now!", login_path %></p>

  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
